<Window x:Class="OilTrackAgentInterface.Controls.ToastNotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        AllowsTransparency="True"
        WindowStyle="None"
        ShowInTaskbar="False"
        Topmost="True"
        ResizeMode="NoResize"
        Width="300" Height="80"
        Background="Transparent">
    <Border x:Name="PART_Border"
          Background="#DD333333"
          CornerRadius="6"
          Opacity="0"
          Padding="12"
          SnapsToDevicePixels="True">
        <TextBlock x:Name="PART_Message"
               Foreground="White"
               TextWrapping="Wrap"
               FontSize="14"/>
    </Border>
</Window>
